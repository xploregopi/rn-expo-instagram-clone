{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 4],

        "react/jsx-indent": ["error", 4, {
            "checkAttributes": true,
            "indentLogicalExpressions": true
        }],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
    }
}
